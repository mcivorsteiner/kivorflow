<% if flash[:sign_up_errors] %>
  <div class="error_messages">
    <h3>Form is invalid</h3>
    <ul>
      <% flash[:sign_up_errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<ul>
  <%= form_for(:user, :url => users_path, :html => {id: "sign-up-form"}) do |f| %>
    <div class="field">
      <%= f.label :full_name, "Full Name" %>
      <%= f.text_field :full_name %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</ul>