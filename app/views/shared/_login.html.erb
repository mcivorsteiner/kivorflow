<ul>
  <%= form_for(:session, :url => sessions_path, :html => {id: "login-form"}) do |f|%>
    <li>
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, required: true %>
    <li>
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, required: true %>
    </li>
    <li>
      <%= f.submit "Login" %>
    </li>
  <% end %>
</ul>