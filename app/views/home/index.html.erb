
<% if flash[:notice] %>
  <div class="error_messages">
    <h3><%= flash[:notice] %></h3>
  </div>
<% end %>
<h2>Login</h2>
<%= render partial: "shared/login", locals: {session: @session} %>

<%= link_to "Don't have an account? Sign Up!", new_user_path, id: "sign-up-link" %>
<div id="sign-up-div" class="<%= "hidden" unless flash[:sign_up_errors] %>">
  <h2>Sign Up</h2>
  <%= render partial: "shared/sign_up", locals: {user: @user} %>
</div>


