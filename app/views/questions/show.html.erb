<div id="question-display">
  <h2>Question:</h2>
  <h3><%= @question.title %></h3>
  <p><%= @question.content %></p>
  <text class="question-details">created by <%= @question.user.full_name %> at <%= @question.created_at %></text>
  <% if current_user == @question.user %>
    <%= link_to "Edit", edit_question_path(@question) %>
    <%= link_to "Delete", question_path(@question), :method => "delete" %>
  <% end %>
</div>

<div id="answers">
  <h3>Answers:</h3>
  <ul>
    <% @question.answers.each do |answer| %>
      <li>
        <text><%= "#{answer.content} (#{answer.user.full_name})" %></text>
      </li>
    <% end %>
  </ul>
</div>

<% if logged_in? && current_user != @question.user %>
  <h3>Submit an Answer:</h3>
  <%= form_for [@question, @answer] do |f| %>
    <%= f.text_area :content %>
    <%= f.submit %>
  <% end %>
<% end %>

<div id="comments">
  <h3>Comments:</h3>
  <ul>
    <% @question.comments.each do |comment| %>
      <li>
        <text><%= "#{comment.content} (#{comment.user.full_name})" %></text>
      </li>
    <% end %>
  </ul>
</div>

<% if logged_in? && current_user != @question.user %>
  <h3>Submit an Comment:</h3>
  <%= form_for [@question, @comment] do |f| %>
    <%= f.text_area :content %>
    <%= f.submit %>
  <% end %>
<% end %>